    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a15017135.taskmanager.MainActivity"
    android:weightSum="1">

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
